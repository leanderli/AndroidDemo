<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".imageview.CircleImageViewTestActivity">

    <com.leanderli.android.demo.imageview.CircleImageView_
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/musk_rec" />

    <com.leanderli.android.demo.textview.MyImageTextViewNew
        xmlns:imageText="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageText"
        imageText:image="@mipmap/ic_launcher"
        imageText:text="@string/app_name"/>

    <com.leanderli.android.demo.imageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/demo_bg"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary" />

    <com.leanderli.android.demo.textview.DrawableTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:drawable_src="@drawable/alipay"
        android:text="alipay"
        app:drawable_location="top"
        app:drawable_height="64dp"
        app:drawable_width="64dp"
        android:gravity="center"
        android:drawablePadding="10dp"/>

    <com.leanderli.android.demo.imageview.LlCircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"/>




</LinearLayout>
