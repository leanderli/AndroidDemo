<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/tv_hotspot_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/hotspot_tag_background"
        android:padding="2dp"
        android:text="@string/hotspot_tag"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_height="48dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@+id/iv_share_icon"
        android:layout_toEndOf="@+id/tv_hotspot_tag"
        android:autoSizeTextType="uniform"
        android:text="@string/app_name"
        android:textColor="#1E88E5"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeMinTextSize="10sp"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_share_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/icons8_share_3_96" />

</RelativeLayout>